<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.MainServlet</servlet-class>
    </servlet>
    <!--展示商品所用servlet-->
    <servlet>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.ViewCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.ViewProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewItemServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.ViewItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.ViewCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.SearchProductServlet</servlet-class>
    </servlet>
    <!--购物车所用servlet-->
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.RemoveItemFromCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.CatalogAction.UpdateCartQuantitiesServlet</servlet-class>
    </servlet>
    <!-- 账户管理servlet -->
    <servlet>
        <servlet-name>ViewLoginServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.ViewLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAccountFormServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.ViewAccountFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEditAccountServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.ViewEditAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewAccountServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.NewAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAccountServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.AccountAction.EditAccountServlet</servlet-class>
    </servlet>
    <!-- 订单管理servlet -->
    <servlet>
        <servlet-name>ViewNewOrderFormServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ViewNewOrderFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewConfirmOrderServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ViewConfirmOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeShipServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ChangeShipServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderSuccessServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ViewOrderSuccessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderListServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ViewOrderListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderServlet</servlet-name>
        <servlet-class>org.csu.wpetstore.web.OrderAction.ViewOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <url-pattern>/getCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/getProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewItemServlet</servlet-name>
        <url-pattern>/getItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/getCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/addItemToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <url-pattern>/removeItemFromCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <url-pattern>/updateCartQuantities</url-pattern>
    </servlet-mapping>
    <!--账户管理servlet-->
    <servlet-mapping>
        <servlet-name>ViewLoginServlet</servlet-name>
        <url-pattern>/toLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAccountFormServlet</servlet-name>
        <url-pattern>/toAccountForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEditAccountServlet</servlet-name>
        <url-pattern>/toEditAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewAccountServlet</servlet-name>
        <url-pattern>/createNewAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAccountServlet</servlet-name>
        <url-pattern>/editAccount</url-pattern>
    </servlet-mapping>
    <!--订单管理servlet-->
    <servlet-mapping>
        <servlet-name>ViewNewOrderFormServlet</servlet-name>
        <url-pattern>/toNewOrderForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewConfirmOrderServlet</servlet-name>
        <url-pattern>/toConfirmOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeShipServlet</servlet-name>
        <url-pattern>/changeShip</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderSuccessServlet</servlet-name>
        <url-pattern>/toOrderSuccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderListServlet</servlet-name>
        <url-pattern>/toOrderList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderServlet</servlet-name>
        <url-pattern>/getOrder</url-pattern>
    </servlet-mapping>
</web-app>